<%- layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <!-- <img src="..." class="card-img-top" alt="Profile Pic"> -->
                <div class="card-body">
                    <h5 class="card-title">
                        <%= user.name %>
                    </h5>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <%= user.email %>
                        </li>
                        <li class="list-group-item">
                            <%= user.phone %>
                        </li>
                        <li class="list-group-item">
                            <% if (user.isAdmin) { %>
                                <button class="btn btn-success"> Show All User</button>
                                <% } %>
                        </li>
                        <li class="list-group-item">
                            <a href="/user/<%= user._id %>/edit" class="btn btn-primary ">Edit</a>
                        </li>
                        <li class="list-group-item">
                            <form action=" /user/<%=user._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>