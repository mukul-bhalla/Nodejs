<%- layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>Login</h1>
            <form action="/login" method="post" novalidate class="validated-form">
                <div>
                    <label class="form-label" for="email">Enter Registered Email Id: </label>
                    <input class="form-control" type="email" name="email" id="email" required>
                </div>
                <div class="d-grid gap-* mt-3">
                    <button class="btn btn-success">Send OTP</button>
                </div>
            </form>
            <br>
            <hr>
            <form action="/login" method="post" novalidate class="validated-form">
                <div>
                    <label class="form-label" for="phone">Enter Registered Mobile Number: </label>
                    <input class="form-control" type="phone" name="phone" id="phone" required>
                </div>
                <div>
                    <label class="form-label" for="password">Enter Password: </label>
                    <input class="form-control" type="password" name="password" id="password" required>
                </div>

                <div class="d-grid gap-* mt-3">
                    <button class="btn btn-success">Login</button>
                </div>
            </form>
        </div>
    </div>